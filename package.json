{
  "name": "trancify",
  "description": "The ultimate music player for trance and progressive lovers, delivering seamless beats and immersive soundscapes",
  "private": true,
  "version": "1.0.0",
  "author": {
    "name": "Jakub Jirous <info@jakubjirous.dev>"
  },
  "keywords": [
    "nextjs",
    "react",
    "typescript",
    "supabase",
    "tailwind",
    "music player",
    "vercel blob",
    "shadcn-ui",
    "spotify-clone"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jakubjirous/trancify.git"
  },
  "license": "MIT",
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "bunx biome lint --write --unsafe ./src ",
    "format": "bunx biome format --write ./src",
    "db:migrate": "npx prisma migrate",
    "db:seed": "npx tsx src/lib/db/seed.ts",
    "db:enhance": "npx tsx src/lib/db/enhance-metadata.ts",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@prisma/client": "5.20.0",
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@supabase/ssr": "latest",
    "@supabase/supabase-js": "latest",
    "autoprefixer": "10.4.17",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "geist": "^1.2.1",
    "lucide-react": "^0.436.0",
    "next": "latest",
    "next-themes": "^0.3.0",
    "prettier": "^3.3.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "@types/node": "^22.7.4",
    "@types/react": "18.2.46",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "prisma": "^5.20.0",
    "tailwind-merge": "^2.5.2",
    "tailwindcss": "3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.2",
    "typescript": "5.3.3"
  },
  "prisma": {
    "schema": "src/lib/db/schema.prisma"
  }
}
